---
import { Image } from "astro:assets";

import MobileMenu from "./MobileMenu.astro";
import ThemeToggle from "./ThemeToggle.astro";

import { cn } from "@/lib/utils";
import { links } from "@/lib/data";

const pathname = new URL(Astro.request.url).pathname;
---

<header class="fixed left-1/2 top-6 z-10 w-full -translate-x-1/2">
  <div
    id="navbar"
    class="relative z-50 mx-auto flex hidden max-w-[170px] items-center justify-center gap-6 rounded-3xl border border-b-0 border-slate-200 bg-white p-2 shadow-md dark:border-slate-800 dark:bg-cyan-950 sm:max-w-[510px] sm:gap-3"
  >
    <a href="/" class="shrink-0"
      ><Image
        src="/logo.png"
        width="64"
        height="41"
        alt="logo"
        id="logo"
        class="w-[40px]"
        fetchpriority="high"
        loading="eager"
      /></a
    >

    <nav class="hidden sm:block">
      <ul class="flex items-center gap-1.5">
        {
          links.map((link) => (
            <li class="">
              <a
                href={link.href}
                class={cn(
                  "inline-flex items-center gap-2 rounded-3xl px-3.5 py-1.5 font-medium tracking-tight text-slate-700 transition hover:bg-slate-800 hover:text-slate-100 hover:shadow-sm dark:text-slate-100 dark:hover:bg-slate-600",
                  link.href === "/"
                    ? pathname === "/" &&
                        "bg-slate-800 text-slate-100 shadow-sm dark:bg-slate-600"
                    : pathname.startsWith(link.href) &&
                        "bg-slate-800 text-slate-100 shadow-sm dark:bg-slate-600",
                )}
                data-astro-prefetch
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <MobileMenu pathname={pathname} />

    <ThemeToggle />
  </div>
</header>

<style>
  @keyframes fade-header {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 100%;
    }
  }

  @media (min-width: 640px) {
    @keyframes animate-header {
      0% {
        width: 0;
        opacity: 0;
      }
      100% {
        width: 100%;
        opacity: 100;
      }
    }
  }

  @keyframes fade-image {
    0% {
      scale: 50%;
    }
    50% {
      scale: 125%;
    }
    100% {
      scale: 100%;
      opacity: 100%;
    }
  }

  @keyframes fade {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 100%;
    }
  }
</style>

<script>
  document.addEventListener(
    "astro:page-load",
    () => {
      const navbar = document.getElementById("navbar");
      if (navbar) {
        setTimeout(() => {
          navbar.classList.remove("hidden");
          navbar.style.animation = "animate-header 1s forwards";
        }, 50);
      }

      const headerNav = document.querySelector("nav");
      if (headerNav) {
        headerNav.classList.add("opacity-0");
        headerNav.style.animation = "fade-header 0.75s 0.25s forwards";
      }

      const headerImage = document.querySelector("img");
      if (headerImage) {
        headerImage.classList.add("opacity-0");
        headerImage.style.animation = "fade-image 0.5s 0.25s forwards";
      }
    },
    { once: true },
  );
</script>
