---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

import Layout from "@/layouts/Layout.astro";

import image from "@/assets/img/404.png";
import { Fade } from "@/components/Fade";
---

<Layout title="404 Page Not Found -">
  <Fade client:visible>
    <section class="container flex flex-col items-center py-28">
      <h1>404 Page Not Found</h1>

      <Image
        src={image}
        alt="sad bird image"
        width="261"
        height="225"
        class="mx-auto"
        loading="eager"
        fetchpriority="high"
      />

      <h3 class="mt-6 text-2xl">
        <a href="/" class="contrast-link">
          Home <Icon
            pack="tabler"
            name="arrow-back"
            class="mb-1 inline h-6 w-6"
          />
        </a>
      </h3>
    </section>
  </Fade>
</Layout>
