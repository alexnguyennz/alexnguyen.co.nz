---
import { type CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<a href={`/blog/${post.slug}/`} data-astro-prefetch>
  <article
    class="group flex origin-top flex-col space-y-4 rounded-2xl p-5 transition duration-300 hover:bg-white hover:shadow-lg dark:hover:bg-slate-800"
  >
    <div class="flex flex-1 flex-col gap-4">
      <h2 class="mb-0 line-clamp-2 text-left">
        {post.data.title}
      </h2>

      <p>{post.data.description}</p>

      <p class="text-sm text-slate-500 dark:text-slate-300">
        {
          new Date(post.data.date).toLocaleDateString("en-NZ", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </p>
    </div>
  </article>
</a>
