---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"input"> {
  className?: string;
}

const { type, className, ...props } = Astro.props;
---

<input
  type={type}
  class={cn(
    "flex w-full rounded-none border border-black bg-transparent px-3 py-2 text-base focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-black dark:border-slate-100 dark:focus-visible:ring-white",
    className,
  )}
  {...props}
/>
