---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"textarea"> {
  className?: string;
}
const { ...props } = Astro.props;
---

<textarea
  class={cn(
    "flex max-h-72 min-h-[80px] w-full rounded-none border border-black bg-transparent px-3 py-2 text-base focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-black dark:border-slate-100 dark:focus-visible:ring-white",
  )}
  {...props}></textarea>
