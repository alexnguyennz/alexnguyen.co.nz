---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

import ThemeToggle from "./ThemeToggle.astro";

import { cn } from "@/lib/utils";

const links = [
  {
    name: "Home",
    href: "/",
  },
  /*  {
    name: "Blog",
    href: "/blog",
  },*/
  {
    name: "Astro",
    href: "/astro",
  },
  {
    name: "Nonprofit",
    href: "/nonprofit",
  },
  {
    name: "About",
    href: "/about",
  },
];

const pathname = new URL(Astro.request.url).pathname;
---

<header class="fixed left-1/2 top-6 z-10 w-full -translate-x-1/2">
  <div
    id="navbar"
    class="relative z-50 mx-auto flex hidden max-w-[130px] items-center justify-center gap-6 rounded-3xl bg-white p-3.5 px-5 shadow-md dark:bg-cyan-100 sm:max-w-[410px] sm:gap-3"
  >
    <a href="/" class="shrink-0"
      ><Image
        src="/logo.png"
        width="64"
        height="41"
        alt="logo"
        id="logo"
        class="w-[40px]"
        fetchpriority="high"
        loading="eager"
      /></a
    >

    <button
      id="mobile-toggle"
      class="rounded-3xl sm:hidden"
      aria-label="toggle mobile menu"
    >
      <Icon pack="lucide" name="menu" class="h-6 w-6 text-cyan-900" /></button
    >

    <nav class="hidden sm:block">
      <ul class="flex items-center gap-1.5">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class={cn(
                  "rounded-3xl px-3.5 py-1.5 font-medium tracking-tight text-slate-700 transition hover:bg-slate-800 hover:text-slate-100 hover:shadow-sm dark:text-cyan-900 dark:hover:bg-cyan-200",
                  link.href === "/"
                    ? pathname === "/" &&
                        "bg-slate-800 text-slate-100 shadow-sm dark:bg-cyan-200"
                    : pathname.startsWith(link.href) &&
                        "bg-slate-800 text-slate-100 shadow-sm dark:bg-cyan-200",
                )}
                data-astro-prefetch
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <nav
      id="mobile-menu"
      class="absolute left-0 top-14 mt-2 hidden w-full rounded-3xl bg-white p-3.5 shadow-xl dark:bg-cyan-100 sm:hidden"
    >
      <ul class="flex flex-col items-center gap-2">
        {
          links.map((link) => (
            <li>
              <a
                href={link.href}
                class={cn(
                  "rounded-3xl px-3.5 py-1.5 font-medium tracking-tight text-slate-700 transition hover:bg-slate-800 hover:text-slate-100 hover:shadow-sm dark:text-cyan-900 dark:hover:bg-cyan-200",
                  link.href === "/"
                    ? pathname === "/" &&
                        "bg-slate-800 text-slate-100 shadow-sm dark:bg-cyan-200"
                    : pathname.startsWith(link.href) &&
                        "bg-slate-800 text-slate-100 shadow-sm dark:bg-cyan-200",
                )}
                data-astro-prefetch
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
<ThemeToggle />

<style>
  nav#mobile-menu {
    opacity: 0;
  }

  nav#mobile-menu {
    animation: fade-header 0.25s forwards;
  }

  @keyframes fade-header {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 100%;
    }
  }

  @media (min-width: 640px) {
    @keyframes animate-header {
      0% {
        width: 0;
        opacity: 0;
      }
      100% {
        width: 100%;
        opacity: 100;
      }
    }
  }

  @keyframes fade-image {
    0% {
      scale: 50%;
    }
    50% {
      scale: 125%;
    }
    100% {
      scale: 100%;
      opacity: 100%;
    }
  }

  #mobile-menu li {
    width: 100%;
    text-align: center;
  }

  #mobile-menu a {
    display: block;
  }
</style>

<script>
  document.addEventListener(
    "astro:page-load",
    () => {
      const navbar = document.getElementById("navbar");
      if (navbar) {
        setTimeout(() => {
          navbar.classList.remove("hidden");
          navbar.style.animation = "animate-header 1s forwards";
        }, 50);
      }

      const headerNav = document.querySelector("nav");
      if (headerNav) {
        headerNav.classList.add("opacity-0");
        headerNav.style.animation = "fade-header 0.75s 0.25s forwards";
      }

      const headerImage = document.querySelector("img");
      if (headerImage) {
        headerImage.classList.add("opacity-0");
        headerImage.style.animation = "fade-image 0.5s 0.25s forwards";
      }
    },
    { once: true },
  );

  function initMobileMenu() {
    const mobileToggle = document.getElementById("mobile-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileToggle && mobileMenu)
      mobileToggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
  }

  initMobileMenu();

  document.addEventListener("astro:after-swap", () => {
    initMobileMenu();

    const navbar = document.getElementById("navbar");
    if (navbar) {
      navbar.classList.remove("hidden");
    }
  });
</script>
