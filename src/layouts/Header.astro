---
import { Image } from "astro:assets";
import { cn } from "@/lib/utils";

const pathname = new URL(Astro.request.url).pathname;
---

<header class="fixed top-5 z-20 w-full px-5">
  <div
    class="container mx-auto flex max-w-md items-center justify-center gap-2 rounded-3xl bg-blue-100 p-3 shadow-xl"
  >
    <a href="/"
      ><Image
        src="/logo.png"
        width="64"
        height="41"
        alt="logo"
        class="mx-auto h-auto w-[40px]"
        fetchpriority="high"
        loading="eager"
      /></a
    >

    <nav>
      <ul class="flex items-center gap-1">
        <li>
          <a href="/" class={cn(pathname === "/" && "active")}>Home</a>
        </li>
        <li>
          <a
            href="/projects"
            class={cn(pathname.startsWith("/project") && "active")}>Projects</a
          >
        </li>
        <li>
          <a
            href="/nonprofit"
            class={cn(pathname.startsWith("/nonprofit") && "active")}
            >Nonprofit</a
          >
        </li>
        <li>
          <a href="/about" class={cn(pathname.startsWith("/about") && "active")}
            >About</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>
